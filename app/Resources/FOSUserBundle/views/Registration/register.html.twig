{% extends "::base.html.twig" %}
{% block title %}Register!{% endblock %}
{% block stylesheets %}
<style type="text/css">
    a {outline:none;blr:expression(this.onFocus=this.blur());}
    .blk {background:url({{ asset('bundles/filixcaiji/images/reg.jpg') }}) repeat-x top center; height:485px; width:100%;}
    .box {width:990px; height:485px; background:url({{ asset('bundles/filixcaiji/images/reg.jpg') }}) repeat-x top center; margin:0 auto}
    .txt {float:right; margin-right:50px; width:400px; height:350px; margin-top:70px; background:#fff; border:1px solid #ccc; border-radius:4px; -moz-box-shadow:0 3px 0 rgba(0,0,0,.1);-webkit-box-shadow:0 3px 0 rgba(0,0,0,.1);box-shadow:0 3px 0 rgba(0,0,0,.1);}
    .txt  table{ font-size:16px; font-family:'微软雅黑','Microsoft Yahei',Arial; margin:30px auto auto auto}
    .txt  table td{ font-size:16px;  font-family:'微软雅黑','Microsoft Yahei',Arial; color:#777 }
    #TextBox1, #TextBox2, #TextBox3, #TextBox4{background:#fff; border:1px solid #ccc; border-radius:2px; width:170px; height:25px; line-height:25px; font-size:14px; padding:0 5px; font-family:'微软雅黑','Microsoft Yahei',Arial;}
    #TextBox1, #TextBox2 {color:#CCC;}
    #TextBox3, #TextBox4 {color:#333;}
    #Button1 {background:#EE5871; border:1px solid #E3173C; color:#fff;padding:0; height:35px; width:112px; font-size:18px; border-radius:2px; display:inline-block; cursor:pointer; text-align:center;  font-family:'微软雅黑','Microsoft Yahei',Arial;}
    #Button1:hover {background:#E3173C; border:1px solid #BB1331; }
    input {outline:none}
    #Label1 {font-size:13px;}
    span.info {color:#f00}
</style>
{% endblock %}
{% block top %}
<div id="wrap">
    <div class="top_top">
        <div class="left">欢迎来到唯动！</div>
        <div class="right"><a href="{{ path('index') }}">回到首页</a>|<a href="{{ path('login') }}">登录</a></div>
    </div>
</div>
{% endblock %}
{% block content %}
<div class="top">
    <div class="text w_990 bg_333">
        <div class="left logo"><a href="{{ path('index') }}"></a></div>
        <div class="right menu">

        </div>
    </div>
</div>

<div class="blk">
    <div class="box">
        <div class="txt">
            <form action="{{ path('register') }}" method="post" >
            {{ form_widget(form._token) }}
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td colspan="2" height="50">
                        <strong>我已经有帐号了。现在就 <a href="{{ path('login') }}" style="border-bottom:1px dotted #ccc">登录唯动</a></strong> 吧
                    </td>
                </tr>
                <tr>
                    <td align="right" height="40" >Email：</td>
                    <td align="left">
                        {{ form_errors(form.email) }}
                        <input name="fos_user_registration_form[email]" type="text" id="TextBox1"  /> <span class="info">*</span>
                    </td>
                </tr>
                <tr>
                    <td align="right" height="40" >昵称： </td> 
                    <td align="left">
                        {{ form_errors(form.username) }}
                        <input name="fos_user_registration_form[username]" type="text" id="TextBox2"  /> <span class="info">*</span>
                    </td>
                </tr>
                <tr>
                    <td align="right" height="40" >密码：</td>
                    <td align="left">
                        {{ form_errors(form.plainPassword.first) }}
                        <input name="fos_user_registration_form[plainPassword][first]" type="password" id="TextBox3" /> <span class="info">*</span>
                    </td>
                </tr>

                <tr>
                    <td align="right" height="40" >确认密码：</td>
                    <td align="left">
                        {{ form_errors(form.plainPassword.second) }}
                        <input name="fos_user_registration_form[plainPassword][second]" type="password" id="TextBox4" /> <span class="info">*</span>
                    </td>
                </tr>

                <tr>
                    <td height="60" align="right" > </td>
                    <td align="left">
                        <input type="submit" name="Button1" value=" 注 册 " id="Button1" />
                    </td>

                </tr>
                <tr>
                    <td height="30" align="right" > </td>
                    <td align="left" >
                        <span id="Label1" style="color:Red;"></span>
                    </td>

                </tr>
            </table>
            </form>
        </div>
    </div>
</div>

<div class="bottom">
    <div class="text w_990 bg_333">
        <div class="bottom_txt">Copyright © vidonn.com</div>
    </div>
</div>
{% endblock %}