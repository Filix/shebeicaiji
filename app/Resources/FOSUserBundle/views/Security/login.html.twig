{% extends "::base.html.twig" %}
{% block title %}Login!{% endblock %}
{% block stylesheets %}
<style type="text/css">
    a {outline:none;blr:expression(this.onFocus=this.blur());}
    .blk {background:url({{ asset('bundles/filixcaiji/images/login.jpg') }}) repeat-x top center; height:485px; width:100%;}
    .box {width:990px; height:485px; background:url({{ asset('bundles/filixcaiji/images/login.jpg') }}) repeat-x top center; margin:0 auto}
    .txt {float:right; margin-right:50px; width:400px; height:300px; margin-top:95px; background:#fff; border:1px solid #ccc; border-radius:4px; -moz-box-shadow:0 3px 0 rgba(0,0,0,.2);-webkit-box-shadow:0 3px 0 rgba(0,0,0,.2);box-shadow:0 3px 0 rgba(0,0,0,.2);}
    .txt  table{ font-size:16px; font-family:'微软雅黑','Microsoft Yahei',Arial; margin:30px auto auto auto}
    .txt  table td{ font-size:16px;  font-family:'微软雅黑','Microsoft Yahei',Arial; color:#777 }
    #TextBox1, #TextBox2{background:#fff; border:1px solid #ccc; border-radius:2px; width:170px; height:25px; line-height:25px; font-size:14px; padding:0 5px; font-family:'微软雅黑','Microsoft Yahei',Arial;}
    #txt_Vcode{background:#fff; border:1px solid #ccc; border-radius:2px; width:100px; height:25px; line-height:25px; padding:0 5px; font-family:'微软雅黑','Microsoft Yahei',Arial;}
    #TextBox1 {color:#CCC;}
    #TextBox2, #txt_Vcode {color:#333;}
    #Button1 {background:#EE5871; border:1px solid #E3173C; color:#fff;padding:0; height:35px; width:112px; font-size:18px; border-radius:2px; display:inline-block; cursor:pointer; text-align:center;  font-family:'微软雅黑','Microsoft Yahei',Arial;}
    #Button1:hover {background:#E3173C; border:1px solid #BB1331; }
    input {outline:none}
    #Label1 {font-size:13px;}
</style>
{% endblock %}
{% block top %}
<div id="wrap">
    <div class="top_top">
        <div class="left">欢迎来到唯动！</div>
        <div class="right"><a href="{{ path('index') }}">回到首页</a>|<a href="{{ path('register') }}">注册</a></div>
    </div>
</div>
{% endblock %}
{% block content %}
<div class="top">
    <div class="text w_990 bg_333">
        <div class="left logo"><a href="{{ path('index') }}"></a></div>
        <div class="right menu">

        </div>
    </div>
</div>

<div class="blk">
    <div class="box">
        <div class="txt">
            
            <form action="{{ path('fos_user_security_check') }}" method="post" >
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {#{{ form_widget(form._token) }}#}
            <table border="0" cellpadding="0" cellspacing="0">
                <tbody>
                    {% if error %}  
                    <tr>
                        <td colspan="2" height="40"><strong style="color:red">账号或密码错误</strong></td>
                    </tr>
                    {% endif %}
                    <tr>
                        <td colspan="2" height="40"><strong>还没有帐号？现在就 <a href="{{ path('register') }}" style="border-bottom:1px dotted #ccc">加入唯动</a> 吧</strong></td>
                    </tr>
                    <tr>
                        <td height="40" align="right">
                            Email：</td>           
                        <td align="left">
                            <input name="_username" type="text" id="TextBox1">
                        </td>
                    </tr>
                    <tr>
                        <td height="40" align="right">
                            密码：</td>
                        <td align="left">
                            <input name="_password" type="password" id="TextBox2">
                        </td>
                    </tr>
                    <tr>
                        <td height="60" align="right"> </td>
                        <td align="left">
                            <input type="submit" name="Button1" value=" 登 录 " id="Button1">
                        </td>
                    </tr>
                    <tr>
                        <td height="30" align="right"> </td>
                        <td align="left">
                            <span id="Label1" style="color:Red;"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            </form>
        </div>
    </div>
</div>

<div class="bottom">
    <div class="text w_990 bg_333">
        <div class="bottom_txt">Copyright © vidonn.com</div>
    </div>
</div>
{% endblock %}